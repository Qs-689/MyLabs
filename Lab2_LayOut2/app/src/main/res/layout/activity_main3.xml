<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 主标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android布局实验——约束布局1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Input"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="#CCCCCC"
            android:padding="12dp"
            android:gravity="end" />
    </LinearLayout>

    <!-- 计算器按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 第一行按钮：7, 8, 9, ÷ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />
        </LinearLayout>

        <!-- 第二行按钮：4, 5, 6, × -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />
        </LinearLayout>

        <!-- 第三行按钮：1, 2, 3, - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />
        </LinearLayout>

        <!-- 第四行按钮：0, *, ÷, - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="÷"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_margin="6dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="0dp"
                android:layout_margin="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 底部导航栏 -->
    <include layout="@layout/bottom_navigation" />

</LinearLayout>